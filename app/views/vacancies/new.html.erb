<h2 class="page-title"><%= t(".submit_vacancy") %></h2>


<div class="panel panel-default">
  <div class="panel-body">
    <%= form_for @vacancy do |f| %>
      <div class="form-group">
        <%= f.label :job_title, t('.job_title') %>
        <%= f.text_field :job_title, class: 'form-control' %>
        <%= error_tag @vacancy, :job_title %>
      </div>

      <div class="form-group">
        <%= f.label :location, t('.location') %>
        <%= f.text_field :location, class: 'form-control' %>
        <%= error_tag @vacancy, :location %>
      </div>

      <div class="form-group">
        <%= f.label :description, t('.description') %>
        <%= f.text_area :description, rows: 15, class: 'form-control', 'data-provider' => 'summernote' %>
        <%= error_tag @vacancy, :description %>
      </div>

      <div class="form-group">
        <%= f.label :how_to_apply, t('.how_to_apply') %>
        <%= f.text_area :how_to_apply, rows: 5, class: 'form-control' %>
        <%= error_tag @vacancy, :how_to_apply %>
      </div>

      <hr>

      <div id="company-details">
        <h3><%= t(".company_details") %></h3>

        <br>

        <div class="form-group">
          <%= f.label :company_name, t('.company_name') %>
          <%= f.text_field :company_name, class: 'form-control' %>
          <%= error_tag @vacancy, :company_name %>
        </div>

        <div class="form-group">
          <%= f.label :company_url, t('.company_url') %>
          <%= f.text_field :company_url, class: 'form-control' %>
          <%= error_tag @vacancy, :company_url %>
        </div>

        <div class="form-group">
          <%= f.label :company_email, t('.company_email') %>
          <%= f.text_field :company_email, class: 'form-control' %>
          <%= error_tag @vacancy, :company_email %>
        </div>
      </div>

      <div class="text-right">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    <% end %>

  </div>
</div>
